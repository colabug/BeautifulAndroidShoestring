<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/TiledBackground">

    <!--Regular and rounded rectangles-->
    <LinearLayout
        android:orientation="horizontal"
        style="@style/Wrap">

        <!--Regular rectangle-->
        <View
            android:background="@drawable/rectangle"
            style="@style/Rectangle"/>

        <!--Round rectangle-->
        <View
            android:background="@drawable/round"
            style="@style/Rectangle"/>
        </LinearLayout>

    <!--Rectangles with gradients-->
    <LinearLayout
        android:orientation="horizontal"
        style="@style/Wrap">

        <!--Gradient-->
        <View
            android:background="@drawable/gradient"
            style="@style/Rectangle"/>

        <!--Angular gradient-->
        <View
            android:background="@drawable/anglegradient"
            style="@style/Rectangle"/>
    </LinearLayout>

    <!--Button-->
    <Button
        android:id="@+id/text_button"
        android:text="@string/BUTTON_TEXT"
        style="@style/Button"/>
</LinearLayout>
