<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Background">

    <!--Regular and rounded rectangles-->
    <LinearLayout
        android:orientation="horizontal"
        style="@style/Wrap">

        <!--Regular rectangle-->
        <View
            android:background="@drawable/rectangle"
            style="@style/Rectangle"/>

        <!--Round rectangle-->
        <View
            android:background="@drawable/round"
            style="@style/Rectangle"/>
        </LinearLayout>

    <!--Rectangles with gradients-->
    <LinearLayout
        android:orientation="horizontal"
        style="@style/Wrap">

        <!--Gradient-->
        <View
            android:background="@drawable/gradient"
            style="@style/Rectangle"/>

        <!--Angular gradient-->
        <View
            android:background="@drawable/anglegradient"
            style="@style/Rectangle"/>
    </LinearLayout>

    <!--Button-->
    <Button
        android:id="@+id/button"
        android:text="@string/BUTTON_TEXT"
        style="@style/Button"/>

    <!--Text with shadow-->
    <TextView
        android:text="@string/SHADOW_TEXT"
        style="@style/ShadowText"/>

    <!--Gradient text-->
    <TextView
        android:id="@+id/gradient_text"
        android:text="@string/GRADIENT_TEXT"
        style="@style/LargeText"/>

    <!--Angled gradient text-->
    <TextView
        android:id="@+id/angled_gradient_text"
        android:text="@string/ANGLED_GRADIENT_TEXT"
        style="@style/LargeText"/>

    <!--Custom font-->
    <TextView
        android:id="@+id/custom_font_text_view"
        android:text="@string/SHADOW_TEXT"
        style="@style/LargeText"/>
</LinearLayout>
